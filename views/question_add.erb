<h2>Fill out the form to add a new question</h2>

<form id="/question_add" action="/survey/<%= @survey.id %>/question" method="post">
  <label for="question_description">Add a question below</label>
  <input type="hidden" name="survey_name" value="<%= @survey.id %>">
  <input type="text" name="question_description" placeholder="Ex. 'favorite food?'">
  <% if Survey.any? %>
  <button name="question_button" type="submit">Add</button>
  <% else %>
  <a href="/surveys/new">Please add a survey before continuing</a>
  <% end %>

</form>
